# .env file for HuggingFace Spaces
# Configure these as Secrets in HuggingFace Space settings

# OpenAI API Key (REQUIRED)
OPENAI_API_KEY=your-openai-api-key-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini

# Optional: Email configuration (not needed for demo)
# EMAIL_USERNAME=
# EMAIL_PASSWORD=
# SUPPORT_EMAIL=support@demo.com

# Optional: Other LLM providers
# GEMINI_API_KEY=
# ANTHROPIC_API_KEY=
