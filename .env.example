# Email Configuration
EMAIL_ADDRESS=your-email@example.com
EMAIL_PASSWORD=your-app-password
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# LLM Configuration
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=...
ANTHROPIC_API_KEY=...

# LLM Model Selection
LLM_PROVIDER=openai  # openai, gemini, anthropic
LLM_MODEL=gpt-4-turbo-preview

# Service URLs
CORE_BANKING_URL=http://localhost:8001
CRM_URL=http://localhost:8002
NOTIFICATION_URL=http://localhost:8003
WORKFLOW_URL=http://localhost:8004

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# Security
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (if needed)
DATABASE_URL=sqlite:///./app.db

# Guardrails
CONFIDENCE_THRESHOLD=0.7
ENABLE_PII_DETECTION=true
ENABLE_PROFANITY_FILTER=true

# Feature Flags
ENABLE_RAG=true
ENABLE_EMAIL_POLLING=true
ENABLE_AUDIT_LOGGING=true
